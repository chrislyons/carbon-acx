{
  "schema_dirs": [
    "schemas/",
    "site/public/schemas/",
    "config/"
  ],
  "formats": ["json", "yaml", "toml"],
  "rules": {
    "require_description": true,
    "require_version": true,
    "no_duplicate_keys": true,
    "enforce_types": true,
    "allow_additional_properties": false
  },
  "schema_definitions": "schemas/**/*.schema.json",
  "exclude_patterns": [
    "node_modules/**",
    "dist/**",
    ".venv/**"
  ],
  "severity": {
    "missing_required_field": "error",
    "type_mismatch": "error",
    "empty_description": "warning",
    "unknown_field": "warning"
  }
}
