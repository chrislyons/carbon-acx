{
  "package_managers": ["npm", "pip"],
  "severity_threshold": "moderate",
  "allowed_licenses": [
    "MIT",
    "Apache-2.0",
    "BSD-2-Clause",
    "BSD-3-Clause",
    "ISC",
    "0BSD",
    "Unlicense"
  ],
  "review_required_licenses": [
    "GPL-2.0",
    "GPL-3.0",
    "LGPL-2.1",
    "LGPL-3.0",
    "AGPL-3.0",
    "MPL-2.0",
    "EPL-2.0"
  ],
  "disallowed_licenses": [
    "UNLICENSED",
    "WTFPL"
  ],
  "auto_update": false,
  "check_dev_dependencies": true,
  "exclude_packages": [],
  "allowlist_vulnerabilities": [],
  "scan_frequency": "weekly",
  "notify_on": ["critical", "high"],
  "output_format": "markdown",
  "generate_sarif": false
}
