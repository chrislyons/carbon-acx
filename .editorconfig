# EditorConfig is awesome: https://EditorConfig.org

# Top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true

# Python files
[*.{py,pyx}]
indent_style = space
indent_size = 4
max_line_length = 100

# JavaScript, TypeScript, JSON, YAML
[*.{js,jsx,ts,tsx,json,yaml,yml}]
indent_style = space
indent_size = 2

# CSS, SCSS, HTML
[*.{css,scss,html}]
indent_style = space
indent_size = 2

# Markdown
[*.md]
trim_trailing_whitespace = false
indent_style = space
indent_size = 2

# Makefile
[Makefile]
indent_style = tab

# TOML files
[*.toml]
indent_style = space
indent_size = 2

# Shell scripts
[*.sh]
indent_style = space
indent_size = 2

# SQL files
[*.sql]
indent_style = space
indent_size = 2

# CSV files (no trimming)
[*.csv]
trim_trailing_whitespace = false
